<h3 class="text-2xl font-medium">Create Question</h3>

<.simple_form for={@question} method="post" action={~p"/questions"}>
  <.label for="description">Description</.label>
  <.input field={@question[:description]} id="description" type="text" required />
  <div class="flex justify-end">
    <.button>Create</.button>
  </div>
</.simple_form>
